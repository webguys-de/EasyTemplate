<?xml version="1.0"?>
<config>
    <easytemplate>
        <simple translate="label">
            <enabled>1</enabled>
            <label>Simple Templates</label>
            <templates>
                <headline_text template="easytemplate/template/headline_text.phtml" type="easytemplate/template"
                               translate="label,comment">
                    <enabled>1</enabled>
                    <label>Headline + Text</label>
                    <image>images/easytemplate/headline_text.png</image>
                    <comment>Headline, subheadline and some additional text</comment>
                    <sort_order>10</sort_order>
                    <fields>
                        <h1 translate="label,comment">
                            <label>Headline</label>
                            <comment>The headline of the template</comment>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_text</input_renderer>
                            <sort_order>10</sort_order>
                            <default_value></default_value>
                            <required>0</required>
                        </h1>
                        <h2 translate="label,comment">
                            <label>Subheadline</label>
                            <comment>Subheadline under the heading</comment>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_text</input_renderer>
                            <sort_order>20</sort_order>
                            <default_value></default_value>
                            <required>0</required>
                        </h2>
                        <text translate="label,comment">
                            <label>Text</label>
                            <comment>Text</comment>
                            <backend_model>easytemplate/template_data_text</backend_model>
                            <input_renderer>easytemplate/input_renderer_editor</input_renderer>
                            <sort_order>30</sort_order>
                            <default_value></default_value>
                            <required>0</required>
                        </text>
                    </fields>
                </headline_text>

                <google_maps template="easytemplate/template/google_maps.phtml" type="easytemplate/template_googlemaps"
                             translate="label,comment">
                    <enabled>1</enabled>
                    <label>Google Maps</label>
                    <image>images/easytemplate/google_maps.png</image>
                    <comment>Displays a point on the landscape</comment>
                    <sort_order>20</sort_order>
                    <fields>
                        <map_url translate="label,comment">
                            <label>iFrame Code</label>
                            <comment>Simply paste the iFrame Html-Code</comment>
                            <backend_model>easytemplate/template_data_text</backend_model>
                            <input_renderer>easytemplate/input_renderer_textarea</input_renderer>
                            <sort_order>10</sort_order>
                            <default_value></default_value>
                            <required>1</required>
                        </map_url>
                        <width translate="label,comment">
                            <label>Width</label>
                            <comment>Width of the map</comment>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_text</input_renderer>
                            <sort_order>20</sort_order>
                            <default_value>425</default_value>
                            <required>1</required>
                        </width>
                        <height translate="label,comment">
                            <label>Height</label>
                            <comment>Height of the map</comment>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_text</input_renderer>
                            <sort_order>30</sort_order>
                            <default_value>350</default_value>
                            <required>1</required>
                        </height>
                        <show_link translate="label,comment">
                            <label>Show link</label>
                            <comment>Show link to google</comment>
                            <backend_model>easytemplate/template_data_int</backend_model>
                            <input_renderer>easytemplate/input_renderer_select</input_renderer>
                            <input_renderer_source>easytemplate/input_renderer_source_yesno</input_renderer_source>
                            <sort_order>40</sort_order>
                            <default_value>true</default_value>
                            <required>1</required>
                        </show_link>
                    </fields>
                </google_maps>

                <youtube template="easytemplate/template/youtube.phtml" type="easytemplate/template"
                         translate="label,comment">
                    <enabled>1</enabled>
                    <label>Youtube</label>
                    <image>images/easytemplate/youtube.png</image>
                    <comment>Displays a youtube video</comment>
                    <sort_order>30</sort_order>
                    <fields>
                        <video_id translate="label,comment">
                            <label>Video-ID</label>
                            <comment>Simply paste the Video-ID</comment>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_text</input_renderer>
                            <sort_order>10</sort_order>
                            <default_value></default_value>
                            <required>0</required>
                        </video_id>
                        <width translate="label,comment">
                            <label>Width</label>
                            <comment>Width of the video</comment>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_text</input_renderer>
                            <sort_order>20</sort_order>
                            <default_value>560</default_value>
                            <required>1</required>
                        </width>
                        <height translate="label,comment">
                            <label>Height</label>
                            <comment>Height of the video</comment>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_text</input_renderer>
                            <sort_order>30</sort_order>
                            <default_value>315</default_value>
                            <required>1</required>
                        </height>
                        <allowfullscreen translate="label,comment">
                            <label>Fullscreen</label>
                            <comment>Allow fullscreen</comment>
                            <backend_model>easytemplate/template_data_int</backend_model>
                            <input_renderer>easytemplate/input_renderer_select</input_renderer>
                            <input_renderer_source>easytemplate/input_renderer_source_yesno</input_renderer_source>
                            <sort_order>40</sort_order>
                            <default_value>true</default_value>
                            <required>1</required>
                        </allowfullscreen>
                    </fields>
                </youtube>

                <vimeo template="easytemplate/template/vimeo.phtml" type="easytemplate/template"
                       translate="label,comment">
                    <enabled>1</enabled>
                    <label>Vimeo</label>
                    <image>images/easytemplate/vimeo.png</image>
                    <comment>Displays a vimeo video</comment>
                    <sort_order>40</sort_order>
                    <fields>
                        <video_id translate="label,comment">
                            <label>Video-ID</label>
                            <comment>Simply paste the Video-ID</comment>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_text</input_renderer>
                            <sort_order>10</sort_order>
                            <default_value></default_value>
                            <required>0</required>
                        </video_id>
                        <width translate="label,comment">
                            <label>Width</label>
                            <comment>Width of the video</comment>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_text</input_renderer>
                            <sort_order>20</sort_order>
                            <default_value>560</default_value>
                            <required>1</required>
                        </width>
                        <height translate="label,comment">
                            <label>Height</label>
                            <comment>Height of the video</comment>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_text</input_renderer>
                            <sort_order>30</sort_order>
                            <default_value>315</default_value>
                            <required>1</required>
                        </height>
                    </fields>
                </vimeo>

                <text_2column template="easytemplate/template/text_2column.phtml" type="easytemplate/template"
                              translate="label,comment">
                    <enabled>1</enabled>
                    <label>Text 2column</label>
                    <image>images/easytemplate/text_2column.png</image>
                    <comment>2 Columns text</comment>
                    <sort_order>50</sort_order>
                    <fields>
                        <text_left translate="label,comment">
                            <label>Text</label>
                            <comment>Text in the left column</comment>
                            <backend_model>easytemplate/template_data_text</backend_model>
                            <input_renderer>easytemplate/input_renderer_editor</input_renderer>
                            <sort_order>1</sort_order>
                            <default_value></default_value>
                            <required>0</required>
                        </text_left>
                        <text_right translate="label,comment">
                            <label>Text</label>
                            <comment>Text in the right column</comment>
                            <backend_model>easytemplate/template_data_text</backend_model>
                            <input_renderer>easytemplate/input_renderer_editor</input_renderer>
                            <sort_order>1</sort_order>
                            <default_value></default_value>
                            <required>0</required>
                        </text_right>
                    </fields>
                </text_2column>

                <text_picture template="easytemplate/template/text_picture.phtml" type="easytemplate/template"
                              translate="label,comment">
                    <enabled>1</enabled>
                    <label>Text + picture</label>
                    <image>images/easytemplate/text_picture.png</image>
                    <comment>Display a point on the landscape</comment>
                    <sort_order>60</sort_order>
                    <fields>
                        <image translate="label,comment">
                            <label>Image</label>
                            <comment>The image is not going to be resized, please upload the image in the right size.</comment>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_file</input_renderer>
                            <sort_order>10</sort_order>
                            <default_value></default_value>
                            <required>0</required>
                        </image>
                        <link translate="label,comment">
                            <label>Link</label>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_link</input_renderer>
                            <sort_order>30</sort_order>
                            <required>0</required>
                        </link>
                        <image_alignment translate="label,comment">
                            <label>Alignment</label>
                            <comment>How to align the image</comment>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_select</input_renderer>
                            <input_renderer_source>easytemplate/input_renderer_source_values</input_renderer_source>
                            <values>
                                <left>Left</left>
                                <center>Center</center>
                                <right>Right</right>
                            </values>
                            <sort_order>20</sort_order>
                            <default_value>left</default_value>
                            <required>1</required>
                        </image_alignment>
                        <caption translate="label,comment">
                            <label>Caption</label>
                            <comment>The caption of the image</comment>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_text</input_renderer>
                            <sort_order>40</sort_order>
                            <default_value></default_value>
                            <required>0</required>
                        </caption>
                        <text translate="label,comment">
                            <label>Text</label>
                            <comment>Text</comment>
                            <backend_model>easytemplate/template_data_text</backend_model>
                            <input_renderer>easytemplate/input_renderer_textarea</input_renderer>
                            <sort_order>50</sort_order>
                            <default_value></default_value>
                            <required>0</required>
                        </text>
                    </fields>
                </text_picture>

                <spacer template="easytemplate/template/spacer.phtml" type="easytemplate/template"
                        translate="label,comment">
                    <enabled>1</enabled>
                    <label>Spacer</label>
                    <image>images/easytemplate/spacer.png</image>
                    <comment>Inserts empty line(s)</comment>
                    <sort_order>70</sort_order>
                    <fields>
                        <amount translate="label,comment">
                            <label>Amount of lines</label>
                            <backend_model>easytemplate/template_data_int</backend_model>
                            <input_renderer>easytemplate/input_renderer_select</input_renderer>
                            <input_renderer_source>easytemplate/input_renderer_source_numbers</input_renderer_source>
                            <sort_order>10</sort_order>
                            <default_value>1</default_value>
                            <required>1</required>
                        </amount>
                    </fields>
                </spacer>

                <static_block template="easytemplate/template/static_block.phtml" type="easytemplate/template"
                        translate="label,comment">
                    <enabled>1</enabled>
                    <label>Static Block</label>
                    <image>images/easytemplate/static_block.png</image>
                    <comment>Inserts content of a static block</comment>
                    <sort_order>80</sort_order>
                    <fields>
                        <block_identifier translate="label,comment">
                            <label>Static Block</label>
                            <backend_model>easytemplate/template_data_int</backend_model>
                            <input_renderer>easytemplate/input_renderer_select</input_renderer>
                            <input_renderer_source>catalog/category_attribute_source_page</input_renderer_source>
                            <sort_order>10</sort_order>
                            <default_value>1</default_value>
                            <required>1</required>
                        </block_identifier>
                    </fields>
                </static_block>
            </templates>
        </simple>
        <test translate="label">
            <enabled>1</enabled>
            <label>Test Templates</label>
            <templates>
                <testtemplate template="easytemplate/template/testtemplate.phtml" type="easytemplate/template"
                              translate="label,comment">
                    <enabled>1</enabled>
                    <label>Test template</label>
                    <comment>A test template with all EasyTemplate features</comment>
                    <image>images/easytemplate/testtemplate.png</image>
                    <sort_order>10</sort_order>
                    <fields>

                        <image_test translate="label,comment">
                            <label>Magento Media Gallery</label>
                            <comment>Comment for image-input</comment>
                            <!-- <backend_model>easytemplate/template_data_varchar</backend_model> -->
                            <input_renderer>easytemplate/input_renderer_image</input_renderer>
                            <sort_order>5</sort_order>
                            <required>0</required>
                        </image_test>

                        <textarea_test translate="label,comment">
                            <label>Textarea</label>
                            <comment>Comment for textarea</comment>
                            <!-- <backend_model>easytemplate/template_data_text</backend_model> -->
                            <input_renderer>easytemplate/input_renderer_textarea</input_renderer>
                            <sort_order>10</sort_order>
                            <default_value>Textarea default value</default_value>
                            <required>0</required>
                        </textarea_test>

                        <textfield_test translate="label,comment">
                            <label>Textfield</label>
                            <comment>Comment for textfield</comment>
                            <!-- <backend_model>easytemplate/template_data_varchar</backend_model> -->
                            <input_renderer>easytemplate/input_renderer_text</input_renderer>
                            <sort_order>20</sort_order>
                            <default_value>Textfield default value</default_value>
                            <required>0</required>
                        </textfield_test>

                        <divider_test translate="label,comment">
                            <label>Heading divider</label>
                            <comment>Comment for divider</comment>
                            <input_renderer>easytemplate/input_renderer_divider</input_renderer>
                            <sort_order>25</sort_order>
                        </divider_test>

                        <editor_test translate="label,comment">
                            <label>Editor</label>
                            <comment>Comment for editor</comment>
                            <!-- <backend_model>easytemplate/template_data_text</backend_model> -->
                            <input_renderer>easytemplate/input_renderer_editor</input_renderer>
                            <sort_order>30</sort_order>
                            <default_value>Editor default text</default_value>
                            <required>0</required>
                        </editor_test>

                        <selectyesno_test translate="label,comment">
                            <label>Select yesno</label>
                            <comment>Comment for select yesno</comment>
                            <!-- <backend_model>easytemplate/template_data_int</backend_model> -->
                            <input_renderer>easytemplate/input_renderer_select</input_renderer>
                            <input_renderer_source>easytemplate/input_renderer_source_yesno</input_renderer_source>
                            <sort_order>40</sort_order>
                            <default_value>true</default_value>
                            <required>0</required>
                        </selectyesno_test>

                        <selectcustomsource_test translate="label,comment">
                            <label>Select source xml</label>
                            <comment>Comment for select xml source</comment>
                            <!-- <backend_model>easytemplate/template_data_varchar</backend_model> -->
                            <input_renderer>easytemplate/input_renderer_select</input_renderer>
                            <input_renderer_source>easytemplate/input_renderer_source_values</input_renderer_source>
                            <values>
                                <option1>Option 1</option1>
                                <option2>Option 2</option2>
                                <option3>Option 3</option3>
                                <optionX>Option X</optionX>
                            </values>
                            <sort_order>50</sort_order>
                            <default_value>option2</default_value>
                            <required>0</required>
                        </selectcustomsource_test>

                        <selectnumbers_test translate="label,comment">
                            <label>Select source numbers</label>
                            <comment>Comment for number select</comment>
                            <!-- <backend_model>easytemplate/template_data_int</backend_model> -->
                            <input_renderer>easytemplate/input_renderer_select</input_renderer>
                            <input_renderer_source>easytemplate/input_renderer_source_numbers</input_renderer_source>
                            <sort_order>60</sort_order>
                            <default_value>5</default_value>
                            <required>0</required>
                        </selectnumbers_test>

                        <multiselect_test translate="label,comment">
                            <label>Select source numbers</label>
                            <comment>Comment for number select</comment>
                            <!-- <backend_model>easytemplate/template_data_varchar</backend_model> -->
                            <input_renderer>easytemplate/input_renderer_multiselect</input_renderer>
                            <input_renderer_source>easytemplate/input_renderer_source_values</input_renderer_source>
                            <values>
                                <option1>Option 1</option1>
                                <option2>Option 2</option2>
                                <option3>Option 3</option3>
                                <optionX>Option X</optionX>
                            </values>
                            <sort_order>70</sort_order>
                            <default_value>option2,option3</default_value>
                            <required>0</required>
                        </multiselect_test>

                        <file_test translate="label,comment">
                            <label>File</label>
                            <comment>Comment for file</comment>
                            <!-- <backend_model>easytemplate/template_data_varchar</backend_model> -->
                            <input_renderer>easytemplate/input_renderer_file</input_renderer>
                            <sort_order>80</sort_order>
                            <default_value></default_value>
                            <required>0</required>
                        </file_test>

                        <link_test translate="label,comment">
                            <label>Link</label>
                            <comment>Comment for link</comment>
                            <!-- <backend_model>easytemplate/template_data_varchar</backend_model> -->
                            <input_renderer>easytemplate/input_renderer_link</input_renderer>
                            <sort_order>90</sort_order>
                            <default_value></default_value>
                            <required>1</required>
                        </link_test>

                        <product_test translate="label,comment">
                            <label>Product</label>
                            <comment>Comment for product</comment>
                            <!-- <backend_model>easytemplate/template_data_int</backend_model> -->
                            <input_renderer>easytemplate/input_renderer_product</input_renderer>
                            <sort_order>100</sort_order>
                            <default_value></default_value>
                            <required>0</required>
                        </product_test>

                        <category_test translate="label,comment">
                            <label>Category</label>
                            <comment>Comment for category</comment>
                            <!-- <backend_model>easytemplate/template_data_int</backend_model> -->
                            <input_renderer>easytemplate/input_renderer_category</input_renderer>
                            <sort_order>100</sort_order>
                            <default_value></default_value>
                            <required>0</required>
                        </category_test>

                        <block_test translate="label,comment">
                            <label>Block reference</label>
                            <comment>Comment for block</comment>
                            <!-- <backend_model>easytemplate/template_data_int</backend_model> -->
                            <input_renderer>easytemplate/input_renderer_block</input_renderer>
                            <input_renderer_source>easytemplate/input_renderer_source_blocks</input_renderer_source>
                            <sort_order>110</sort_order>
                            <default_value>3</default_value>
                            <required>0</required>
                        </block_test>

                        <datepicker_test translate="label,comment">
                            <label>Datepicker</label>
                            <comment>Comment for datepicker</comment>
                            <!-- <backend_model>easytemplate/template_data_datetime</backend_model> -->
                            <input_renderer>easytemplate/input_renderer_datepicker</input_renderer>
                            <sort_order>120</sort_order>
                            <default_value>2013-12-05</default_value>
                            <required>0</required>
                        </datepicker_test>
                    </fields>
                </testtemplate>
            </templates>
        </test>

        <product translate="label">
            <enabled>1</enabled>
            <label>Productlisting</label>
            <templates>
                <category_products template="catalog/product/list.phtml" type="easytemplate/template_product_list"
                                   translate="label,comment">
                    <enabled>1</enabled>
                    <label>Display Category Products</label>
                    <comment>Display Products of a custom category</comment>
                    <sort_order>10</sort_order>
                    <fields>
                        <category_id translate="label,comment">
                            <label>Category</label>
                            <comment>Comment for category</comment>
                            <input_renderer>easytemplate/input_renderer_category</input_renderer>
                            <sort_order>10</sort_order>
                            <default_value></default_value>
                            <required>1</required>
                        </category_id>

                        <column_count translate="label,comment">
                            <label>Column Count</label>
                            <comment>Comment for category</comment>
                            <backend_model>easytemplate/template_data_int</backend_model>
                            <input_renderer>easytemplate/input_renderer_text</input_renderer>
                            <sort_order>15</sort_order>
                            <default_value>3</default_value>
                            <required>1</required>
                        </column_count>

                        <limit translate="label,comment">
                            <label>Number of Products</label>
                            <comment>How much products you like to display?</comment>
                            <input_renderer>easytemplate/input_renderer_text</input_renderer>
                            <sort_order>20</sort_order>
                            <default_value>6</default_value>
                            <required>1</required>
                        </limit>

                        <sort_by translate="label">
                            <label>Product Listing Sort by</label>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_select</input_renderer>
                            <input_renderer_source>catalog/category_attribute_source_sortby</input_renderer_source>
                            <sort_order>30</sort_order>
                            <required>0</required>
                        </sort_by>

                        <sort_by_direction translate="label">
                            <label>Product Listing Sort Order</label>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_select</input_renderer>
                            <input_renderer_source>easytemplate/input_renderer_source_values</input_renderer_source>
                            <values>
                                <desc>Set Descending Direction</desc>
                                <asc>Set Ascending Direction</asc>
                            </values>
                            <sort_order>31</sort_order>
                            <required>0</required>
                        </sort_by_direction>
                    </fields>
                </category_products>

            </templates>
        </product>
    </easytemplate>
</config>
